            background-color: #2a2a2a;
        }

        .avatar-edit {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border-radius: 5px;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .avatar-preview:hover .avatar-edit {
            opacity: 1;
        }

        .avatar-edit i {
            color: white;
            font-size: 24px;
        }

        #avatar {
            display: none;

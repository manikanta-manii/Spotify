<style>
    .avatar-upload {
        position: relative;
        width: 150px;
        height: 150px;
    }

    .avatar-preview {
        width: 150px;
        height: 150px;
        border-radius: 5px;
        border: 2px solid #3e3e3e;
        cursor: pointer;
        background-size: cover;
        background-position: center;
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23666666"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg>');
        background-color: #2a2a2a;
        display: block;
        /* Ensure background is visible */
    }

    .avatar-edit {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-radius: 5px;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .avatar-preview:hover .avatar-edit {
        opacity: 1;
    }

    .avatar-edit i {
        color: white;
        font-size: 24px;
    }

    #avatar {
        display: none;
    }
</style>

<button onclick="Drawer.openFromTemplate('#customDrawer', '30%')">Open Custom Drawer</button>

<div id="customDrawer" class="drawer-template">
    <div slot="header">
        <h3>Add Artist</h3>
    </div>
    <div slot="content">
        <label for="avatar">Profile Photo</label>
        <div class="avatar-upload">
            <div class="avatar-preview" id="avatarPreview">
                <div class="avatar-edit">
                    <i class="fas fa-edit"></i>
                </div>
            </div>
            <input type="file" id="avatar" name="avatar" accept="image/*">
        </div>
    </div>
    <div slot="footer" class="w-100">
        <button class="btn btn-save">Save</button>
        <button class="btn close-drawer-btn btn-cancel">Cancel</button>
    </div>
</div>

<script>
    const avatarInput = $('#avatar');
    const avatarPreview = $('#avatarPreview');


    avatarPreview.on('click', function() {
        avatarInput.trigger('click');
    });

    avatarInput.on('change', function() {
        const file = this.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                avatarPreview.css('background-image', `url(${e.target.result})`);
            }
            reader.readAsDataURL(file);
        }
    });
</script>
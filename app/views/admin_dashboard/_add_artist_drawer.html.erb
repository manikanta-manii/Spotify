
    <style>
        .drawer-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            z-index: 1000;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease;
        }

        .drawer {
            position: fixed;
            top: 0;
            right: -25%;
            width: 25%;
            height: 100%;
            background-color: var(--color-grey1);
            z-index: 1001;
            transition: right 0.3s ease;
            box-shadow: -2px 0 10px rgba(0, 0, 0, 0.3);
            overflow-y: auto; 

            .drawer-content {
                padding: 32px;
                margin-bottom: 76px;
            }

            .drawer-header{
                padding: 32px;
                display: flex;
                justify-content: space-between;
                align-items: baseline;
            }

            .drawer-footer {
                position: fixed;
                bottom: 0;
                /* right: 0; */
                width: 25%; 
                padding: 16px 32px;
                border-top: 1px solid #3e3e3e;
                display: flex;
                justify-content: flex-end;
                gap: 10px;
                box-sizing: border-box;
                 background-color: var(--color-grey1);
                 /* right: -65%;
                 transition: right 0.3s ease; */
            }

            .close {
                color: var(--color-grey3);
                cursor: pointer;
                font-size: 20px;
            }

            .close:hover {
                color: white;
            }

            /* .btn{
                border: none !important;
                border-radius: 20px !important;
            } */

            .drawer-btn {
                padding: 12px 24px;
                border-radius: 20px;
                border: none;
                font-weight: bold;
                cursor: pointer;
                transition: transform 0.2s;
            }

            .drawer-btn-cancel {
                background-color: transparent;
                color: var(--color-white);
            }

            .btn-success{
                background-color: var(--color-green);
                color: var(--color-white);
            }

            .btn:hover {
                transform: scale(1.04);
            }
        }

        .drawer.open {
            right: 0;
        }

        .drawer-overlay.open {
            opacity: 1;
            visibility: visible;
        }

        .drawer.open .drawer-footer {
            transform: translateX(0);
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #b3b3b3;
        }

        .form-group input, 

<div class="playlist-form-container">
  <h1>Create New Playlist</h1>

  <%= form_with(model: @playlist, local: false, class: "playlist-form") do |form| %>
    <% if @playlist.errors.any? %>
      <div class="error-messages">
        <h2><%= pluralize(@playlist.errors.count, "error") %> prohibited this playlist from being saved:</h2>
        <ul>
          <% @playlist.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name %><span style="color:red">*</span>
      <%= form.text_field :name, class: "form-control", placeholder: "Enter playlist name" ,required: true %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "Describe your playlist" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Update Playlist", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>